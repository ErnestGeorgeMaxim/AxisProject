        <Button Content="M-" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="-0.728,-2.294" Width="70" Height="36" Margin="241,395,0,0" FontSize="25" Style="{StaticResource ClearOrangeButton}"/>
