<Window x:Class="Lab_MAP_02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_MAP_02"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
        <Window.DataContext>
            <local:UserDataContext/>
        </Window.DataContext>
        <Grid>
            <Label Content="Username: " HorizontalAlignment="Left" Height="40" Margin="87,111,0,0" VerticalAlignment="Top" Width="100"/>
            <Label Content="Password: " HorizontalAlignment="Left" Height="40" Margin="87,175,0,0" VerticalAlignment="Top" Width="100"/>
            <TextBox HorizontalAlignment="Left" Height="40" Margin="216,111,0,0" TextWrapping="Wrap" Text="{Binding CurrentUser.Username}" VerticalAlignment="Top" Width="200" Background="#474747" Foreground="White" TextAlignment="Left" VerticalContentAlignment="Center" Name="textBoxUsername"/>
            <TextBox HorizontalAlignment="Left" Height="40" Margin="216,175,0,0" TextWrapping="Wrap" Text="{Binding CurrentUser.Password}" VerticalAlignment="Top" Width="200" Background="#474747" Foreground="White" TextAlignment="Left" VerticalContentAlignment="Center" Name="textBoxPassword"/>
            <Button Content="OK" HorizontalAlignment="Left" Height="40" Margin="504,111,0,0" VerticalAlignment="Top" Width="100" Background="#4f008c" Foreground="White" Click="Button_Click"/>
            <Button Content="ADD" HorizontalAlignment="Left" Height="40" Margin="504,175,0,0" VerticalAlignment="Top" Width="100" Background="#4f008c" Foreground="White" Click="Button_Click_1"/>
            <ListBox HorizontalAlignment="Left" Height="134" Margin="87,256,0,0" VerticalAlignment="Top" Width="329" ItemsSource="{Binding Users}" DisplayMemberPath="Username"/>
         </Grid>
</Window>
